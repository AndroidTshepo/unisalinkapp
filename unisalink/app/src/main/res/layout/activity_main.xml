<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.codetribe.unisalink.app.activity_register"
    android:background="@color/background_floating_material_dark"

    android:scrollbars="vertical">


    <LinearLayout
        android:id="@+id/layerOne"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:background="@drawable/book_advert"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:id="@+id/TopBar">

            <ImageView
                android:id="@+id/logoUnilink"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/logo_unilink"/>


        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/TextFieldLoader">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/etUserName"
                android:hint="Username / Email Address"
                android:clickable="true"
                android:textColor="@color/WhiteText"
                android:textColorHint="@color/WhiteText" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etPassword"
                android:layout_below="@+id/etUserName"
                android:hint="Password"
                android:textColor="@color/WhiteText"
                android:textColorHint="@color/WhiteText"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/CheckBoxHolder">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me"
                android:id="@+id/cbRememberMe"
                android:textColor="#fff"
                android:clickable="true" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/LoginButtonHolder"
            android:focusable="true">

            <Button
                android:id="@+id/login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/ButtonColor"
                android:textColor="@color/WhiteText"
                android:text="login"
                android:layout_below="@+id/cellphone" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/forgotPassWordHolder">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Forgot your password?"
                android:ems="10"
                android:id="@+id/libForgotPassword"
                android:textColor="@color/WhiteText"
                android:layout_weight="1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" Sign up now"
                android:ems="10"
                android:id="@+id/lbSignUp"
                android:layout_weight="1"
                android:textColor="@color/WhiteText"
                android:gravity="right" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
