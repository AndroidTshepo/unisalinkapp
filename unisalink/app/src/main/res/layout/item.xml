<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="110dp" >

    <ImageView
        android:id="@+id/bookImage"
        android:layout_weight="0.4"
        android:src="@drawable/book_advert"
        android:layout_width="dp"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_weight="1"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:textColor="#B20000"
            android:text="Intoduction to Android Development"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ISBN"
            android:textColor="#556"
            android:textSize="18sp"
            android:layout_below="@+id/title"
            android:text="ISBN:56651456414698"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/price"
            android:textColor="#556"
            android:textSize="18sp"
            android:layout_below="@+id/ISBN"
            android:text="R 500.00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>